        }).on('deselect', function (e, dt, type, indexes) {
            var toplam = 0;
            for (var i = 0; i < table.rows('.selected').data().length; i++) {
                var a = $('#example tr.selected').eq(i).data('tutar');
                a = a.replace(",", ".");
                toplam += parseFloat(a);

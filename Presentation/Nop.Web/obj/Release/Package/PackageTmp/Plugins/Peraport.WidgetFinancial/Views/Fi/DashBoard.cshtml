<div class="box box-info " id="nopcommerce-common-statistics-box">
    <div class="box-header with-border clearfix">
        <div class="box-title">
            <i class="fa ion-stats-bars"></i>
            Genel istatistikler
        </div>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <br>
    <div class="col-lg-12 col-xs-12">
        <div class="small-box bg-red">
            <div class="inner">

                <div class="row">
                    <div class="col-lg-8 col-xs-12">
                        <h4>@Model.NAME</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12" style="padding:5px 10px 2px 20px;font-size:18px;">
                        Bakiye
                    </div>
                    <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12" style="padding:5px 10px 2px 20px;font-size:18px;">
                        @Model.BAKIYE.ToString("#,##0.00") TL
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12" style="padding:5px 10px 2px 20px;font-size:18px;">
                        Limit
                    </div>
                    <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12" style="padding:5px 10px 2px 20px;font-size:18px;">
                        @Model.LIMIT.ToString("#,##0.00") TL
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12" style="padding:5px 10px 2px 20px;font-size:18px;">
                        Kullanılabilir Limit
                    </div>
                    <div class="col-lg-6 col-md-6  col-sm-6 col-xs-12" style="padding:5px 10px 2px 20px;font-size:18px;">
                        @Model.CURRENT_LIMIT.ToString("#,##0.00") TL
                    </div>
                </div>
                @*<table>
                        <tr>
                            <td colspan="2"><h4>@Model.NAME</h4></td>
                        </tr>
